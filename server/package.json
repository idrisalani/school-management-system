{
    "name": "school-management-system-server",
    "version": "2.0.0",
    "description": "School Management System Server with PostgreSQL",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "vercel-build": "echo 'Build complete'",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "generate-keys": "node src/utils/jwt.js",
        "type-check": "npx tsc --noEmit",
        "type-check:watch": "npx tsc --noEmit --watch",
        "build": "echo 'No build step required for Node.js'",
        "db:test": "node -e \"import('./src/config/database.js').then(db => db.testConnection())\"",
        "db:status": "node -e \"import('./src/config/database.js').then(db => db.getDatabaseStatus().then(console.log))\"",
        "db:health": "node -e \"import('./src/config/database.js').then(db => db.healthCheck().then(console.log))\"",
        "validate:types": "npx tsc --noEmit && echo 'TypeScript validation passed!'",
        "auth:test": "node -e \"console.log('Testing auth routes...'); fetch('http://localhost:3001/api/v1/auth/test').then(r=>r.json()).then(console.log).catch(console.error)\""
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.732.0",
        "@aws-sdk/client-ses": "^3.731.1",
        "@aws-sdk/credential-provider-node": "^3.731.1",
        "@aws-sdk/s3-request-presigner": "^3.732.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.1",
        "express-validator": "^7.2.1",
        "helmet": "^7.2.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "nodemailer": "^6.9.16",
        "pg": "^8.16.3",
        "stripe": "^18.4.0",
        "uuid": "^11.0.5",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^4.7.1",
        "ws": "^8.18.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@babel/core": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.23",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jest": "^29.5.10",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.19.11",
        "@types/nodemailer": "^6.4.14",
        "@types/pg": "^8.15.5",
        "@types/uuid": "^9.0.7",
        "@types/ws": "^8.5.10",
        "babel-jest": "^29.7.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3",
        "typescript": "^5.9.2"
    },
    "jest": {
        "testEnvironment": "node",
        "preset": "babel-jest",
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "clover"
        ],
        "extensionsToTreatAsEsm": [
            ".js"
        ],
        "globals": {
            "__DEV__": true
        }
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
